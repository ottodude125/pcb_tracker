<!-- View:    design                                            -->
<!-- Purpose: Displays the design search options.               -->
<!-- ********************************************************** -->
<!-- $Id$ -->
<!-- ********************************************************** -->

<% @heading = "Search Designs" %>

<%= form_tag(:action => 'design_search') do %>


  <hr class="div" />
  
  <table border="0"  align="center" cellspacing="0">
    <tr>
      <th align="right" width="50%">Designer: </th>
      <td><%= @designer %></td>
    </tr>
    <tr>
      <th align="right">Platform: </th>
      <td><%= @platform %></td>
    </tr>
    <tr>
      <th align="right">Projects: </th>
      <td><%= @project %></td>
    </tr>
    <tr>
      <th align="right">Selected Phases: </th>
      <td>
        <%= @selected_phases.join(", ") %>
     </td>
    </tr>
  </table>

  <hr class="div" />

  <div id="selections">


  <table border="0" width="80%" align="center">
  
    <tr>
      <th>Design</th>
      <th>Phase</th>
      <th>Status</th>
      <th>Description</th>
      <th>Designer</th>
    </tr>

   <% logger.debug "===view===="
      logger.debug @design_list
      logger.debug "========="
   %>
   <% @design_list.each do |design|  %>

   <%= render( :partial    => "board_design_search_list_stripes",
               :locals     => { :design_data => design } ) %>
   <% end %>
  </table>

  </div>

  <hr class="div" />
  
  <table width="80%" align="center">
    <tr>
      <td align="left">
        <input type="button" value="Back" 
               onClick="parent.location='<%= url_for( :controller => 'board',
                                                      :action     => 'search_options' ) %>'" />
      </td>
      <td align="right">
        <input type="button" value="Home"
               onClick="parent.location='<%= url_for( :controller => 'tracker',
                                                      :action     => 'index' ) %>'" />
      </td>
    </tr>
  </table>

  <% end %>

<%# debug params %>
<%# debug session[:return_to] %>
