<!-- View:    Shared                               -->
<!-- Purpose: Displays a form row for a part number                           -->
<!-- ********************************************************** -->
<!-- $Id$ -->
<!-- ********************************************************** -->

<tr>
  <td width="200" class="label" align="right">
    <% if pn_row.use %>
      <%=pn_row.use.upcase%>
      <input TYPE ="hidden"
    name="rows[<%=row_num%>][use]"
    value="<%=pn_row.use%>" />
    <% else %>
     <INPUT TYPE="text"
           name="rows[<%=row_num%>][use]"
           size="3"
           MAXLENGTH=3
           TABINDEX=<%=@tabindex += 1%>
           value="<%=pn_row.use%>"
           onKeyUp="doNext(this)" />
     <% end %>
  </td>

  <td class="data">
    <INPUT TYPE="text"
    			 class="<%= pn_row.use %> part_num_input"
           name="rows[<%=row_num%>][pnum]"
           size="30"
           MAXLENGTH="15"
           TABINDEX=<%=@tabindex += 1%>
           value="<%=pn_row.pnum%>"
           onKeyUp="doNext(this)" />
  </td>
  <td class="data">-</td>

  <td class="data">
    <INPUT TYPE="text"
           name="rows[<%=row_num%>][revision]"
           size="1"
           MAXLENGTH="1"
           value="<%=pn_row.revision%>"
           onKeyUp="doNext(this)" />
  </td>

</tr>
