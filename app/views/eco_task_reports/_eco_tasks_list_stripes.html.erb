<!-- View:    eco_task_reports                                  -->
<!-- Purpose: Displays line items in the eco_tasks table for    -->
<!--          the index and reindex views.                      -->
<!-- ********************************************************** -->
<!-- $Id$ -->
<!-- ********************************************************** -->

<tr align="center" class="<%= eco_tasks_list_stripes_counter.modulo(2).nonzero? ? "dk_gray" : "lt_gray" %>">
  <td>
    <% if @user %>
      <%= link_to "#{eco_tasks_list_stripes.number}", edit_eco_task_path(eco_tasks_list_stripes) %>
    <% else %>
      <%= link_to "#{eco_tasks_list_stripes.number}", eco_task_path(eco_tasks_list_stripes) %>
    <% end %>
  </td>
  <td><%=h eco_tasks_list_stripes.pcba_part_number %></td>
  <td><%=h eco_tasks_list_stripes.pcb_revision %></td>
  <td><%= eco_tasks_list_stripes.screened_at.strftime("%d-%b-%y") %></td>
  <td>
    <% if eco_tasks_list_stripes.specification_identified? %>
      <% if eco_tasks_list_stripes.started_at != nil %>
        <%= eco_tasks_list_stripes.started_at.strftime("%d-%b-%y") %>
      <% end %>
    <% else %>
      Not Started
    <% end %>
  </td>
  <td>
    <% if eco_tasks_list_stripes.completed_at %>
      <%= eco_tasks_list_stripes.completed_at.strftime("%d-%b-%y") %>
    <% else %>
      &nbsp;
    <% end %>
  </td>
  <td>
    <% if eco_tasks_list_stripes.closed_at %>
      <%= eco_tasks_list_stripes.closed_at.strftime("%d-%b-%y") %>
    <% else %>
      &nbsp;
    <% end %>
  </td>
  <td><%= eco_tasks_list_stripes.schematic?            ? "&bull;" : "&nbsp;" %></td>
  <td><%= eco_tasks_list_stripes.assembly_drawing?    ? "&bull;" : "&nbsp;" %></td>
  <td><%= eco_tasks_list_stripes.fabrication_drawing? ? "&bull;" : "&nbsp;" %></td>
  <td><%= eco_tasks_list_stripes.cuts_and_jumps? ? "&bull;" : "&nbsp;" %></td>
</tr>

