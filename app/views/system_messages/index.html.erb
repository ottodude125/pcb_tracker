<h1>System Messages</h1>

<table id="log_table" class="display">
    <thead>
        <tr>
            <th>Date</th>
            <th>Message Type</th>
            <th>Title</th>
            <th>Body</th>
            <th>Valid from</th>
            <th>Valid until</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @system_messages.each do |system_message| %>
            <tr>
                <td><%= system_message.updated_at.format_dd_mon_yy %></td>
                <td><%= system_message.message_type %></td>
                <td><%= system_message.title %></td>
                <td><%= truncate(system_message.body, :length => 50) %></td>
                <td><%= system_message.valid_from.format_dd_mon_yy %></td>
                <td><%= system_message.valid_until.format_dd_mon_yy %></td>
                <td><%= link_to 'Show', system_message_path(system_message.id, :url_return => "/pcbtr/system_messages") %></td>
                <td><%= link_to 'Edit', edit_system_message_path(system_message) %></td>
                <td><%= link_to 'Destroy', system_message, confirm: 'Are you sure?', method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<br />

