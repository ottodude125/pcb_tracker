ORIGINAL POST: Posted by <%= @root_post.user.name %> @ <%= @root_post.created_at.strftime('%d-%b-%y at %I:%M %p') %>

<%= h @root_post.body %>

<% @root_post.direct_children.reverse[0..3].each do |child_post| %>
------------------------------------------------------------------------
REPLY: Posted by <%= child_post.user.name %> @ <%= child_post.created_at.strftime('%d-%b-%y at %I:%M %p') %>
<%= h child_post.body %>

<% end %>
