<% if @role %>
  <% if params[:value] == "true" %>
    <% if @role.reviewer? %>
      <table>
        <tr>
          <td align="right" class="teraheader">Default Reviewer:</td>
          <td>
            <select id="role" name="role[default_reviewer_id]"
                    class="name_select">

              <option value="">None Selected</option>
              <%= options_from_collection_for_select(@role.active_users,
                "id",
                "last_name_first",
                @role.default_reviewer_id) %>
            </select>
          </td>
        </tr>
      </table>
    <% else %>
      No active users for the role.  Can not assign a default reviewer for the
      role until at least one user is assigned to the role.
    <% end %>
  <% end %>
<% end %>
