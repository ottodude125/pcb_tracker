<!-- View:    design_review                                     -->
<!-- Purpose: Displays the details for a design review.         -->
<!-- ********************************************************** -->
<!-- $Id$ -->
<!-- ********************************************************** -->

<table border="0" width="100%">
  <tr>
    <th align="left"  width="130">Design:</th>
    <td colspan="3">
      <%= @design_review.design.name %> -
      <%= @design_review.design.board.platform.name %> /
      <%= @design_review.design.board.project.name %> /
      <%= h @design_review.design.board.description %>
    </td>
  </tr>
  <tr>
    <th align="left">Posted By:</th>
    <td width="220">
      <%= poster_name(@design_review) %>
    </td>
    <th align="left" width="150">Design Center:</th>
    <td>
      <% if @design_review.design_center_id > 0 %>
        <%= link_to(@design_review.design_center.name,
                    design_center_path(@design_review)) %>
      <% else %>
        <b>Not Set</b>
      <% end %>
    </td>
  </tr>
  <tr>
    <th align="left">Criticality:</th>
    <td><%= @design_review.priority.name %></td>
    <th align="left">Review Type:</th>
    <td><%= @design_review.review_name %></td>
  </tr>
  <tr>
    <th align="left">Status:</th>
    <td><%= @design_review.review_status.name %></td>
    <th align="left">Total Days On Hold:</th>
    <td><%= sprintf("%4.1f", 
                    @design_review.time_on_hold_total.to_f / 1.day) %></td>
  </tr> 
  
  <% if @design_review.on_hold? %>
  <tr>
    <th align="left">Placed On Hold:</th>
    <td><%= @design_review.placed_on_hold_on.strftime("%d-%b-%y, %I:%M %p") %></td>
    <th align="left">Days On Hold:</th>
    <td><%= sprintf("%4.1f",
                    @design_review.time_on_hold.to_f / 1.day) %></td>
  </tr>
  <% end %>

  <tr>
    <th align="left">Posting Number:</th>
    <td><%= @design_review.posting_count %></td>
    <% if @design_review.posting_count > 0 %>
      <th align="left">Originally Posted:</th>
      <td>
        <%= @design_review.created_on.strftime("%d-%b-%y, %I:%M %p") %>
      </td>
    <% end %>
  </tr>
  <tr valign="top">
    <% if @design_review.design.fab_houses.size == 0 %>
      <th align="left" colspan="2">No Fab House Selected</th>
    <% else %>
      <% if @design_review.design.fab_houses.size == 1 %>
        <th align="left">Fab House:</th>
      <% else %>
        <th align="left">Fab Houses:</th>
      <% end %>
      <td>
        <table>
          <% for fab_house in @design_review.design.fab_houses %>
            <tr>
              <td><%=h fab_house.name %></td>
            </tr>
          <% end %>
        </table>
      </td>
    <% end %>
    
    <% if @design_review.posting_count > 0 %>
      <th align="left">Last Posted:</th>
      <td>
        <%= @design_review.reposted_on.strftime("%d-%b-%y, %I:%M %p") %>
      </td>
    <% end %>
  </tr>
</table>

