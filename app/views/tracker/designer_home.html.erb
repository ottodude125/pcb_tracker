<% @title = "PCB Design Board/Data Tracker" %>
<%# debug session %>

<table width="100%" border="0" cellspacing="2" align="center" rules="cols">
  <tr>
    <td width="155" valign="top">
      <table align="center" rules="rows" cellpadding="5" border="0">

        <tr>
          <td align="center">
            <%= link_to("All Boards",
                        { :controller => 'board',
                          :action     => 'show_boards' }) %> <br />
          </td>
        </tr>
        <tr>
          <td align="center">
            <%= link_to("Board Search",
                        { :controller => 'board',
                          :action     => 'search_options' }) %> <br />
          </td>
        </tr>
        <%= render(:partial => 'pcb_engineering_entry') %>
        <% if @logged_in_user.is_an_lcr_designer? && EcoTask.find_open.size > 0 %>
          <tr bgcolor="yellow">
            <td align="center">
              <%= link_to("Active ECO CAD Tasks", eco_tasks_url) %>
            </td>
          </tr>
        <% end %>
       <tr>
          <td align="center">
            <%= link_to("Reviewer Workload",
                        { :controller => 'report',
                          :action     => 'reviewer_workload' }) %>
          </td>
        </tr>
        
        <tr><td>&nbsp;</td></tr>
        
      </table>
    </td>
    <% if @logged_in_user.active_role.name == "Designer" %>
      <td>
        <table width="100%" border="0">
          <tr>
            <td>
              <table width="100%" align="left" border="0">
      	        <tr>
                  <th colspan="2">
                    My Designs
                  </th>
                </tr>

               <% if @designs.size > 0 %>
                  <tr>
                    <td align="left" width="60">
                      <font size="-2"><b>Criticality</b></font>
                    </td>
                    <td>&nbsp;</td>
                  </tr>
                <% else %>
                  <tr>
                    <td align="center">
                      <b>You do not have any active designs.</b>
                    </td>
                  </tr>
                <% end %>
                
                <% @designs.each do |design| %>
                  <tr>
                    <td align="center"
                        valign="top">
                      <b><%= design.priority_name %></b>
                    </td>
                    <td class="teraheader">
                      <font color="#ffffff">
                        <b><%= design.directory_name %> - 
                        <%= design.board.platform.name %> / 
                        <%= design.board.project.name %> /
                        <%= design.board.description %></b>
                      </font>
                    </td>
                  </tr>
                  <tr>
                    <td>&nbsp;</td>
                    <td>
                      <table width="95%" align="right" border="0">
                        <% if design.design_reviews.size > 0 %>
                          <tr>
                            <td bgcolor="#ffffff">&nbsp;</td>
                            <td><font size="-2"><b>Posted</b></font></td>
                            <td><font size="-2"><b>Status</b></font></td>
                            <td><font size="-2"><b>Reviewers</b></font></td>
                            <td><font size="-2"><b>Approvals</b></font></td>
                            <td><font size="-2"><b>Completed</b></font></td>
                          </tr>
                        <% end %>

                        <% design[:design_reviews].each do |review| %>
                          <tr>
                            <td>
                              <%= link_to(review.review_name,
                                          { :controller => 'design_review',
                                            :action     => 'view',
                                            :id         => review.id }) %>
                            </td>
                            <td class="th1">
                              <%= review.created_on.format_dd_mon_yy %>
                            </td>
                            <td class="th1">
                              <%= review.review_status.name %>
                            </td>
                            <td class="th1">
                              <%= review[:reviewers] %>
                            </td>
                            <td class="th1">
                              <%= review[:approvals] %>
                            </td>
                            <td class="th1">
                              <% if review[:approvals] == review[:reviewers] &&
                                 ! review.completed_on.blank? %>
                                <%= review.completed_on.format_dd_mon_yy %>
                              <% else %>
                                N/A
                              <% end %>
                            </td>
                          </tr>
                        <% end %>

                        <% if final_review_locked?(design) %>
                          <tr bgcolor="#dfdfdf">
                            <td colspan="7">
                              Final Review can not be posted until the audit and all work assignments are complete.
                            </td>
                          </tr>
                       
                        <% elsif send_ftp_notification?(design) %>
                        
                          <tr bgcolor="#dfdfdf">
                            <td colspan="6">
                              <table width="100%" border="0">
                                <tr>
                                  <td width="50%" align="left">

                                    <%= link_to("Send the FTP Notification",
                                                { :controller => 'design_review',
                                                  :action     => 'perform_ftp_notification',
                                                  :id         => design.id }) %>
                                  </td>
                                  <td width="50%" align="left">

                                    <%= link_to("Skip the FTP Notification",
                                                { :controller => 'design_review',
                                                  :action     => 'skip_ftp_notification',
                                                  :id         => design.id }) %>
                                  </td>
                                </tr>
                              </table>
                            </td>
                          </tr>
                          
                        <% elsif post_next_review_prompt?(design) %>

                          <tr bgcolor="#dfdfdf">
                            <td colspan="6">
                              <table width="100%" border="0">
                                <tr>
                                  <td width="50%" align="left">

                                    <%= link_to('POST ' +
                                                design[:next_review].review_type.name +
                                                ' Review',
                                                { :controller     => 'design_review',
                                                  :action         => 'posting_filter',
                                                  :design_id      => design.id,
                                                  :review_type_id => design[:next_review].review_type.id }) %>
                                  </td>
                                  <td width="50%" align="left">
                                    <%= link_to('SKIP ' +
                                                design[:next_review].review_type.name +
                                                ' Review',
                                                { :controller     => 'design_review',
                                                  :action         => 'skip_review',
                                                  :design_id      => design.id,
                                                  :review_type_id => design[:next_review].review_type.id },
                                                { :confirm => "This will cause the " +
                                                              design[:next_review].review_type.name +
                                                              " to be skipped and the next review in the " +
                                                              "review cycle will be available for posting.  " +
                                                              "Are you sure you want to do this?"}) %>
                                  </td>
                                </tr>
                              </table>
                            </td>
                          </tr>
                        <% end %>
                      <tr>
                        <td colspan="6">
                          <table width="100%" border="0">
                            <% if design.audit.skip? %>
                              <tr>
                                <td colspan="4">  
                                  <b>Design Audit Skipped</b>
                                </td>
                              </tr>
                            <% else %>
                              
                                <tr>
                                <td bgcolor="#ffffff" width="100">&nbsp;</td>
                                <td align="center">
                                  <font size="-2"><b>% Complete</b></font>
                                </td>
                                <td>
                                  <font size="-2"><b>Peer</b></font>
                                </td>
                                <td align="center">
                                  <font size="-2"><b>Peer % Complete</b></font>
                                </td>
                              </tr>
                              <tr>
                                <td>
                                  <% if design.audit.auditor_complete? %>
                                    <%= link_to("Design Audit",
                                                { :controller => 'audit',
                                                  :action     => 'print',
                                                  :id         =>  design.audit.id},
                                                 :title => "Access to the completed #{design.name} Peer Audit Review") %>
                                  <% elsif design.phase.name != 'Pre_Artwork' %>
                                    <%= link_to("Design Audit",
                                                { :controller => 'audit',
                                                  :action     => 'show_sections',
                                                  :id         =>  design.audit.id},
                                                 :title => "Access to the #{design.name} Peer Audit Review")  %>
                                  <% end %>
                                </td>
                                <td align="center">
                                  <b>
                                    <%= sprintf("%4.1f", design.audit.self_percent_complete) %>
                                  </b>
                                </td>
                                <td>
                                  <b><%= design.peer.name %></b>
                                </td>
                                <td align="center">
                                  <b>
                                    <%= sprintf("%4.1f", design.audit.peer_percent_complete) %>
                                  </b>
                                </td>
                              </tr>

                              <% if design.audit.is_peer_audit? %>
                                
                                <% design.audit.get_design_checks %>
                                <% issue_count = design.audit.checklist.issue_count%>
                                <tr>
                                <% if issue_count == 0 %>
                                  <td colspan="4">
                                     Issues raised by peer: 0
                                  </td>
                                <% else %>
                                  <td colspan="4">
                                    <font color="red"><b>
                                      Issues raised by peer: <%= issue_count %>
                                    </b></font>
                                  </td>
                                <% end %>
                                </tr>
                              <% end %>

                            <% end %>
                            <tr>
                              <td colspan="4" align="left">
                                <table border="0" width="100%">
                                  <tr>
                                    <td width="25%" align="left">
                                      <input type="button" value='<%= "In-Process Dialogue" %>'
                                             title="Initiate and discuss all in-process changes."
                                             onClick="parent.location='<%= url_for(:controller => 'ipd_post',
                                                                                   :action     => 'list',
                                                                                   :design_id  => design.id) %>'"
                                             class="small_font_wide_button" />
                                    </td>
                                    <td width="25%" align="center">
                                    <% if @logged_in_user.is_designer? && @logged_in_user.employee? %>

                                      <input type="button" value='<%= "Outsource Instructions" %>'
                                             title="Create/View/Update Instructions to low cost regions"
                                             onClick="parent.location='<%= url_for(:controller => 'oi_instruction',
                                                                                   :action     => 'oi_category_selection',
                                                                                   :design_id  => design.id) %>'"
                                             class="small_font_wide_button" />
                                    <% else %>
                                      &nbsp;
                                    <% end %>
                                    </td>
                                    <td width="25%" align="center">
                                    <% if @logged_in_user.is_designer? && @logged_in_user.employee? %>

                                      <input type="button" value='<%= "Schedule Change" %>'
                                             title="Create/View/Update Schedule Changes"
                                             onClick="parent.location='<%= url_for(:controller => 'design_changes',
                                                                                   :action     => 'index',
                                                                                   :id  => design.id) %>'"
                                             class="small_font_wide_button" />
                                    <% else %>
                                      &nbsp;
                                    <% end %>
                                    </td>
                                    <td width="25%" align="right">
                                      <% if !(design.audit.is_complete? || design.audit.skip?) %>
                                      <input type="button" value='<%= "Audit Assignments" %>'
                                             title="Set the assignments for self and peer audits."
                                             onClick="parent.location='<%= url_for(:controller => 'audit',
                                                                                   :action     => 'auditor_list',
                                                                                   :id         => design.audit.id,
                                                                                   :return_to  => { :controller => 'tracker',
                                                                                                    :action     => 'index' }) %>'"
                                             class="small_font_wide_button" />
                                      <% else %>
                                        &nbsp;
                                      <% end %>
                                    </td>
                                  </tr>
                                </table>
                              </td>
                            </tr>
                          </table>
                        </td>
                      </tr>

                      </table>
                    </td>
                  </tr>
                <% end %>

              </table>
            </td>
          </tr>
          <tr>
            <td>
              <hr class="div" />
            </td>
          </tr>
          
          <% if @work_assignments %>
            <tr>
              <td>
              <table width="100%" align="right" border="0" cellspacing="0">
                <tr>
                  <th colspan="4">My Work Assignments</th>
                </tr>
                <tr>
                  <td width="60">&nbsp;</td>
                  <th align="left" class="teraheader">PCB Part Number Rev</th>
                  <th align="left" class="teraheader">Assignments</th>
                  <th align="left" class="teraheader">Completed Assignments</th>
                </tr>
                <% @my_assignments.each do |row| %>
                  <% design, assignments, completed = assignment_info(row) %>
                  <tr>
                    <td>&nbsp;</td>
                    <td>
                      <%= link_to(design.directory_name,
                                  { :controller => 'oi_instruction',
                                    :action     => 'category_details',
                                    :id         => design.id },
                                    :title => 'Access to ' + 
                                              design.pcb_number +
                                              ' work assignments') %>
                    
                    </td>
                    <td><%= assignments%></td>
                    <td><%= completed %></td>
                  </tr>
                <% end %>
              </table>
              </td>
            </tr>
            <tr><td><hr class="div" /></td></tr>
          <% end %>
          <tr>
            <td>
              <table width="100%" 
                     align="center" 
                     border="0">
                <tr><th colspan="3">My Audits</th></tr>

                <% if @audits.size > 0 %>
                  <tr>
                    <td align="left" width="60">
                      <font size="-2"><b>Criticality</b></font>
                    </td>
                    <td>&nbsp;</td>
                  </tr>
                <% else %>
                  <tr>
                    <td align="center">
                      <b>You are not assigned to any Peer Audits</b>
                    </td>
                  </tr>
                <% end %>

                <% @audits.each do |audit| %>

                  <tr>
                    <td align="center"
                        valign="top">
                      <b><%= audit.design.priority_name %></b>
                    </td>
                    <td class="teraheader">
                      <b><%= audit.design.directory_name %> -
                      <%= audit.design.board.platform.name %> /
                      <%= audit.design.board.project.name %> /
                      <%= audit.design.board.description %></b>
                    </td>
                  </tr>
                  <tr>
                    <td>&nbsp;</td>
                    <td>
                      <table align="right" border="0">
                        <tr>
                          <td width="200">&nbsp;</td>
                          <td align="center" width="150">
                            <font size="-2"><b>% Complete</b></font>
                          </td>
                          <td align="center" width="250">
                            <font size="-2"><b>Designer</b></font>
                          </td>
                          <td align="center" width="150">
                            <font size="-2"><b>Designer % Complete</b></font>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <% audit_type = (audit.is_self_audit? && audit[:self]) ? 'Self Audit' : 'Peer Audit' %>
                            <% if audit_locked_for_peer(audit) || audit.auditor_complete?%>
                              <%= link_to(audit_type,
                                          { :controller => 'audit',
                                            :action     => 'print',
                                            :id         => audit.id },
                                          :title => "Access to the #{audit.design.name} Peer Audit Review") %>
                            <% else %>
                              <%= link_to(audit_type,
                                          { :controller => 'audit',
                                            :action     => 'show_sections',
                                            :id         => audit.id },
                                          :title => "Access to the #{audit.design.name} Peer Audit Review") %>
                            <% end %>
                          </td>
                          <td align="center">
                            <b>
                              <%= sprintf("%4.1f", audit.peer_percent_complete) %>
                            </b>
                          </td>
                          <td align="center">
                            <%= audit.design.designer.name %>
                          </td>
                          <td align="center">
                            <b>
                              <%= sprintf("%4.1f", audit.self_percent_complete) %>
                            </b>
                          </td>
                        </tr>
                        
                        <% if @logged_in_user.id == audit.design.peer_id  &&
                              !audit.is_complete?                         &&
                              !audit.skip? %>
                        <tr>
                          <td>
                            <%= button_to('Audit Assignments',
                              { :controller => 'audit',
                                :action     => 'auditor_list',
                                :id         => audit.id,
                                :return_to  => { :controller => 'tracker',
                                                 :action     => 'index' } },
                                { :title => 'Set the assignments for self and peer audits.',
                                  :class => "small_font_button" })%>
                          </td>
                        </tr>
                        <% end %>
                      </table>
                    </td>
                  </tr>
                <% end %>
              </table>
            </td>
          </tr>
        </table>
      <% end %>
    </td>
  </tr>
</table>

<%# debug @design_list %>
<%# debug @work_assignments %>
<%# debug @my_assignments %>
