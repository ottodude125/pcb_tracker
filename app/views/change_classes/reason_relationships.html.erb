							<div id="<%=cd.id%>_<%=cd.name.gsub(/\s/,'')%>" style="display:none">
								<h1>
									<%= cd.name%>
								</h1>
								<p>
									<%= cd.definition %>
								</p>
							</div>
							<a href="#<%=cd.id%>_<%=cd.name.gsub(/\s/,'')%>" rel="modal:open">
								<%= cd.name %>
							</a>
						</td>
					</tr>				
				<% end %>
			<% end %>
		
