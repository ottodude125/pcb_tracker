<% @heading = "Change Role" %>

<hr class="div" />

<% form_tag(:action => 'set_role') do %>

  <table width="45%" border="0" >
    <tr>
      <th width="50%" align="right">Current Role: </th>
      <td> <%= @user.active_role.display_name %></td>
    </tr>
    <tr>
      <th align="right">New Role: </th>
      <td>
        <select id="role_id" name="role[id]">
          <%= options_from_collection_for_select(@user.roles.sort_by { |r| r.display_name }, 
                                                 "id", 
                                                 "display_name", 
                                                 "role_id") %>
        </select>
      </td>
    </tr>
  </table>

  <hr class="div" />

  <input type="submit" value="Update My Role" />

<% end %>
