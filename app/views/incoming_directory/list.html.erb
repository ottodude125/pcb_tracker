<!-- View:    incoming_directory                                -->
<!-- Purpose: Displays a list of incoming directories.          -->
<!-- ********************************************************** -->
<!-- $Id$ -->
<!-- ********************************************************** -->


<% @heading = "PCB Tracker - Incoming Directories" %>

<%= form_tag(:action => 'add') do  %>

  <hr class="div" />

  <table width="40%" align="center" border="1" cellspacing="2" cellpadding="2" rules="all">
    <tr>
      <th width="70%">Incoming Directory</th>
      <th width="15%">Active</th>
    </tr>

    <%= render( :partial    => "incoming_directory_list_stripes", 
                :collection => @incoming_directories) %>
  </table>

  <hr class="div" />

  <input type="submit" value="New Incoming Directory" />
  <input type="button" value="Return to Admin portal" onClick="parent.location='<%= url_for( :controller => 'admin', :action => 'index' ) %>'" />

<% end %>
