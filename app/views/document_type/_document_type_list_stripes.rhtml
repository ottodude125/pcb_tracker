<tr class="<%= document_type_list_stripes_counter.modulo(2).nonzero? ? "dk_gray" : "lt_gray" %>">
  <td>
    <% rid = document_type_list_stripes.id %>
    <%= link_to document_type_list_stripes.name, { :action => 'edit', :id => rid } %> 
  </td>
  <td align="center">
    <% if document_type_list_stripes.required? %>
      Yes
    <% else %>
      No
    <% end %>
  </td>
  <td align="center">
    <% if document_type_list_stripes.active? %>
      Yes
    <% else %>
      No
    <% end %>
  </td>
</tr>
