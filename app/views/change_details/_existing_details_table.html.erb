<!-- View:    change details                                    -->
<!-- Purpose: Displays a table of existing of the change        -->
<!--          details.                                          -->
<!-- ********************************************************** -->
<!-- $Id$ -->
<!-- ********************************************************** -->

<table align="center" border="1">

  <tr><th class="teraheader" colspan="3">Existing Details</th></tr>

  <tr>
    <th>Detail</th>
    <th>&nbsp;Active&nbsp;</th>
    <th>&nbsp;Position&nbsp;</th>
  </tr>

  <% @change_details.each do |change_detail| %>
    <tr>
      <td align="center">&nbsp;<%=h change_detail.name %>&nbsp;</td>
      <td align="center"><%= change_detail.active? ? 'Yes' : 'No' %></td>
      <td align="center"><%= change_detail.position %></td>
    </tr>
  <% end %>
</table>
