<h1>Designs</h1>


<h3>Board</h3>

<table border="1">

  <tr align="left">
    <th>ID</th>
    <th>NAME</th>
    <th>PREFIX</th>
    <th>NUMBER</th>
    <th>PLATFORM</th>
    <th>PROJECT</th>
    <th>ACTIVE?</th>
    <th>DESIGNS</th>
  </tr>

  <tr align="left">
    <td><%= @board.id %></td>
    <td><%= @board.name %></td>
    <td><%= @board.prefix.pcb_mnemonic %></td>
    <td><%= @board.number %></td>
    <td><%= @board.platform.name %></td>
    <td><%= @board.project.name %></td>
    <td><%= @board.active? %></td>
    <td align="center"><%= @board.designs.size%></td>
  </tr>

</table>

<h3>Designs</h3>
<% line_number = 0 %>
<table border="1">
  <tr>
    <th>#</th>
    <th>ID</th>
    <th>NAME</th>
    <th>PRIORITY</th>
    <th>REVISION</th>
    <th>SUFFIX</th>
    <th>TYPE</th>
    <th>DESIGNER</th>
    <th>PEER</th>
    <th>CREATED</th>
    <th>CREATOR</th>
    <th>REVIEWS</th>
  </tr>
  
  <% for design in @designs %>
    <tr>
      <td><%= line_number += 1 %></td>
      <td><%= design.id %></td>
      <td><%= design.name %></td>
      <td><%= design.priority.name %></td>
      <td><%= Revision.find(design.revision_id).name %></td>
      <% if design.suffix_id %>
        <td><%= Suffix.find(design.suffix_id).name %></td>
      <% else %>
        <td>&nbsp;</td>
      <% end %>
      <td><%= design.design_type %></td>
      <td><%= User.find(design.designer_id).name %></td>
      <td><%= User.find(design.peer_id).name %></td>
      <td><%= design.created_on.strftime("%d-%b-%y, %I:%M %p") %></td>
      <% if design.created_by != 0 %>
        <td><%= User.find(design.created_by).name %></td>
      <% else %>
        <td align="center">-</td>
      <% end %>
      <td align="center">
        <%= link_to(design.design_reviews.size,
                    { :action => 'design_reviews',
                      :id     => design.id}) %>
      </td>
    </tr>
  <% end %>
</table>
